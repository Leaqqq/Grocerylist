<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OpretVare">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <EditText
            android:id="@+id/idVarenavn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="varenavn"
            android:inputType="textPersonName"
            android:padding="20dp"
            android:text="" />

        <EditText
            android:id="@+id/idAntal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Antal"
            android:inputType="textPersonName"
            android:padding="20dp"
            android:text="" />

        <EditText
            android:id="@+id/idStandardvare"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Standardvare?(1 for ja)"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/idKommentar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Kommentar"
            android:inputType="textPersonName"
            android:text="" />

        <CheckBox
            android:id="@+id/checkBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:text="Standard vare" />

        <Button
            android:id="@+id/opretVare"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onClickOpret"
            android:text="Opret Vare" />

    </LinearLayout>
</ScrollView>